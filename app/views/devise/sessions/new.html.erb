<body class="login1" style="background-color: #eee;">
  <section class="h-100 gradient-form " >
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-xl-10">
          <div class="card rounded-3 text-black">
            <div class="row g-0">
              <div class="col-lg-6">
                <div class="card-body p-md-5 mx-md-4">
                  <div class="text-center">
                    <%= image_tag "logo.jpg", style: 'width: 185px;max-width:185px',class: 'rounded img-fluid' %>
                    <h4 class="mt-1 mb-5 pb-1">We are The Lab Care</h4>
                  </div>

                  <form>
                    <p>Please login to your account</p>
                    <div class="form-outline mb-4"><i class="bi bi-person-fill"></i>
                      <%= f.label :user_name_or_email,{:class => 'form-label', :for => 'emailLabel'} %><span></span>
                      <%= f.email_field :email, autofocus: true, autocomplete: "email",class: 'form-control', id: 'emailLabel' %>
                    </div>
                    <div class="form-outline mb-4"><i class="bi bi-unlock-fill"></i>
                      <%= f.label :password , {:class => 'form-label', :for => 'passwordLabel'}%>
                      <%= f.password_field :password, autocomplete: "current-password",class: 'form-control', id: 'passwordLabel' %>
                    </div>
                    <div class="text-center pt-1 mb-5 pb-1">
                      <% if devise_mapping.rememberable? %>
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                      <% end %>
                      <%= f.submit "Log in", class: 'btn btn-primary btn-block fa-lg mb-3' %>
                      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %><br>
                      <%= link_to "Forgot your password?", new_password_path(resource_name),class: 'text-muted',style: 'text-decoration:none'%>
                      <% end %>
                    </div>
                    <div class="d-flex align-items-center justify-content-center pb-4">
                      <p class="mb-0 me-2">Don't have an account?</p>
                      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                      <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-outline-primary' %>
                      <% end %>
                    </div>

                      </form>

                    </div>
                  </div>
                  <div class="col-lg-6 d-flex align-items-center gradient-custom-3">
                    <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                      <h4 class="mb-4">We are more than just a Lab</h4>
                      <p class="small mb-0">The Lab Care is a medical and clinical laboratory where tests are
                        conducted on clinical specimens to obtain information about the health
                        of a patient to assist in diagnosing, treating, and preventing disease. The
                      results are completely accurate and trustworthy.</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
</body>
<% end %>
